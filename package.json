{
  "name": "@apachi14444/react-native-scaling-drawer",
  "version": "1.0.1",
  "description": "A beautiful, performant drawer navigation with scaling animations and shadow effects for Expo Router and React Native",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run typecheck",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "example": "cd example && npm start",
    "docs": "typedoc src/index.ts",
    "clean": "rm -rf lib",
    "dev": "npm run build:watch",
    "pack:test": "npm pack && tar -tf *.tgz"
  },
  "keywords": [
    "react-native",
    "expo-router",
    "expo",
    "drawer",
    "navigation",
    "animation",
    "scaling",
    "sidebar",
    "menu",
    "mobile",
    "ui",
    "component",
    "typescript",
    "modern-navigation"
  ],
  "author": {
    "name": "apachi1444",
    "url": "https://github.com/apachi1444"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/apachi1444/react-native-scalable-drawer.git"
  },
  "bugs": {
    "url": "https://github.com/apachi1444/react-native-scalable-drawer/issues"
  },
  "homepage": "https://github.com/apachi1444/react-native-scalable-drawer#readme",
  "peerDependencies": {
    "expo": ">=50.0.0",
    "expo-router": ">=3.0.0",
    "react": ">=18.0.0",
    "react-native": ">=0.70.0"
  },
  "dependencies": {
    "react-native-gesture-handler": ">=2.0.0",
    "react-native-reanimated": ">=3.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.72.0",
    "eslint": "^9.37.0",
    "expo": "~50.0.0",
    "expo-router": "~3.4.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "lib",
    "src",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "preset": "react-native",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": "@react-native-community",
    "rules": {
      "prettier/prettier": "off"
    }
  }
}
